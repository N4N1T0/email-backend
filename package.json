{
  "name": "email-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "email": "email dev --dir src/emails --port 4000",
    "prepare": "husky"
  },
  "lint-staged": {
    "*/src/**/*": [
      "next lint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@react-email/components": "0.0.25",
    "husky": "^9.1.6",
    "next": "14.2.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "react-email": "3.0.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.1",
  "pnpm": {
    "allowedDeprecatedVersions": {
      "eslint": "8.57.0"
    }
  }
}
